// consulta embebida
use('football')
db.players.find(
    {
        "stats_by_team.team": "Liverpool FC"
    }, 
    {
        name: 1, "stats_by_team.$": 1
    }
)

// consulta referenciada (lookup o enlace)
use('football')
db.players.aggregate([
    {
        $match: {
          _id: ObjectId('6628faeab0b92d830b28c851')
        }
    },
    {
        $lookup: {
            from: 'teams',
            localField: 'team_id',
            foreignField: '_id',
            as: 'current_team'
        }
    }
])


