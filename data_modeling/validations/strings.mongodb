// crear la estructura de la colecci√≥n (schema)
use('test')
db.createCollection('users', {
    validator: {
        $jsonSchema: {
            bsonType: 'object',
            required: ['username', 'email'],
            properties: {
                username: {
                    bsonType: 'string',
                    description: 'debe ser un string y es requerido',
                },
                email: {
                    bsonType: 'string',
                    description: 'debe ser un string y es requerido',
                },
            },
        },
    },
})


